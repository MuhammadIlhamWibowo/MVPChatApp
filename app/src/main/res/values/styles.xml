<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- TextView -->
    <style name="AppTheme.TextView" parent="AppTheme" />
    <!-- Title -->
    <style name="AppTheme.TextView.Title" parent="AppTheme.TextView">
        <item name="android:textSize">24sp</item>
        <item name="android:fontFamily">@font/gilroy_extrabold</item>
        <item name="android:textColor">@android:color/white</item>
    </style>
    <!-- Subtitle -->
    <style name="AppTheme.TextView.Subtitle" parent="AppTheme.TextView">
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/gilroy_light</item>
        <item name="android:textColor">@android:color/white</item>
    </style>
    <!-- Header -->
    <style name="AppTheme.TextView.Header" parent="AppTheme.TextView">
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/circular_std_bold</item>
        <item name="android:textColor">@android:color/white</item>
    </style>
    <!-- Subheader -->
    <style name="AppTheme.TextView.Subheader" parent="AppTheme.TextView">
        <item name="android:textSize">27sp</item>
        <item name="android:fontFamily">@font/circular_std_medium</item>
        <item name="android:textColor">@android:color/white</item>
    </style>
    <!-- Description -->
    <style name="AppTheme.TextView.Description" parent="AppTheme.TextView">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/circular_std_book</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

</resources>
